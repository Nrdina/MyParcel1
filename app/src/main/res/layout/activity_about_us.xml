<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageContact"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/aboutus"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textContact1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="This application is"
        android:textSize="20dp"
        android:textColor="#663300"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_below="@+id/imageContact"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textContact"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="useful to users who"
        android:textSize="20dp"
        android:textColor="#663300"
        android:layout_gravity="center"
        android:layout_below="@+id/textContact1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textContact2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="want to send parcel"
        android:textSize="20dp"
        android:textColor="#663300"
        android:layout_gravity="center"
        android:layout_below="@+id/textContact"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textContact3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="to anyone at anytime"
        android:textSize="20dp"
        android:textColor="#663300"
        android:layout_gravity="center"
        android:layout_below="@+id/textContact2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textContact4"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="My Parcel will easier their"
        android:textSize="20dp"
        android:textColor="#663300"
        android:layout_gravity="center"
        android:layout_below="@+id/textContact3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textContact5"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="user in making the post item"
        android:textSize="20dp"
        android:textColor="#663300"
        android:layout_gravity="center"
        android:layout_below="@+id/textContact4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textContact6"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="with just an online"
        android:textSize="20dp"
        android:textColor="#663300"
        android:layout_gravity="center"
        android:layout_below="@+id/textContact5"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/back13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="#319040"
        android:text="BACK"
        android:textColor="@android:color/white" />

</RelativeLayout>
