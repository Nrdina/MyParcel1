<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageFeedback"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:src="@drawable/feedback" />

    <TextView
        android:id="@+id/textFeedback1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GIVE US YOUR FEEDBACK"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#663300"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_below="@+id/imageFeedback"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textFeedback2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact us"
        android:textSize="20dp"
        android:textStyle="italic"
        android:textColor="#cc6600"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_below="@+id/textFeedback1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textFeedback3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nurdina: 0166177356"
        android:textSize="20dp"
        android:textColor="#cc6600"
        android:textStyle="italic"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_below="@+id/textFeedback2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textFeedback4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: myparcel@gmail.com"
        android:textSize="20dp"
        android:textColor="#cc6600"
        android:textStyle="italic"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_below="@+id/textFeedback3"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageFeedback1"
        android:layout_width="500dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textFeedback4"
        android:layout_gravity="center"
        android:layout_marginTop="31dp"
        android:src="@drawable/thank" />

    <Button
        android:id="@+id/buttonFeed1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/back14"
        android:layout_alignEnd="@+id/textFeedback2"
        android:layout_gravity="center"
        android:background="#319040"
        android:drawableTop="@drawable/ic_email"
        android:text="EMAIL" />

    <Button
        android:id="@+id/buttonCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageFeedback1"
        android:layout_gravity="center"
        android:layout_toStartOf="@+id/imageFeedback"
        android:background="#319040"
        android:drawableTop="@drawable/ic_phone"
        android:text="CALL" />

    <Button
        android:id="@+id/buttonSms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageFeedback1"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/buttonFeed1"
        android:background="#319040"
        android:drawableTop="@drawable/ic_message"
        android:text="SMS" />

    <Button
        android:id="@+id/back14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="BACK"
        android:layout_marginTop="10dp"
        android:background="#319040"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

