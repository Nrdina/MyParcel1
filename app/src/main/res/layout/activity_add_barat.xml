<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/activity_add_barat"
    android:padding="20dp"
    tools:context="com.example.hp.MyParcel.AddBaratActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_kategori_barat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Receiver Name"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/edit_kategori_barat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_kategori_barat"
        android:ems="15"
        android:inputType="text"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="75dp" />

    <TextView
        android:id="@+id/text_nama_barat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_kategori_barat"
        android:layout_marginTop="20dp"
        android:text="Receiver Address"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/edit_nama_barat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_nama_barat"
        android:ems="15"
        android:inputType="text"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="75dp" />

    <TextView
        android:id="@+id/text_resepi_barat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_nama_barat"
        android:layout_marginTop="18dp"
        android:text="Receiver Contact"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/edit_resepi_barat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text_resepi_barat"
        android:layout_alignTop="@+id/text_resepi_barat"
        android:layout_marginTop="24dp"
        android:ems="15"
        android:inputType="text"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="75dp" />

    <Button
        android:id="@+id/button_tambah_barat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp"
        android:layout_marginStart="54dp"
        android:background="#319040"
        android:text="ADD"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button_show_barat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_tambah_barat"
        android:layout_alignBottom="@+id/button_tambah_barat"
        android:layout_marginStart="54dp"
        android:layout_toEndOf="@+id/button_tambah_barat"
        android:background="#319040"
        android:onClick="@+id/papar"
        android:text="DISPLAY"
        android:textColor="@android:color/white" />


</RelativeLayout>
